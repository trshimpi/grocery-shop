<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p>Grocery Shop</p>
                        <form class="form" action="/search" method="POST">
                
                <div class="form-group">
                   <input class="form-control" type="text" name="product" placeholder="product name" required>
                </div>
                <div class="form-group">
                    <input class="form-control btn btn-primary" type="submit" value="Search">
                </div>
            
            </form>

            <hr>

            <div class="list-group">
                <li class="list-group-item active">Fruits</li>
                <li class="list-group-item">Vegetables</li>
                <li class="list-group-item">Pulses</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="img-thumbnail">
                <img class="card-image-top img-fluid" src="<%= product.image %>">
                <div class="card-body">
                    <div class="card-title">
                            <h1><a href="#"><%= product.name %></a></h1>
                    </div>
                    <div class="card-text">
                        <p><%= product.description %></p>
                    </div>
                    <div class="card-created">
                        <span class="float-left">Price:Rs.<%= product.price %></span>
                            <br>
                        <span class="float-right">Category:<%= product.category %></span>
                            <br>
                            
                    </div>
                    <% if(currentUser.username=="admin"){ %>
                    <a class="card-link btn btn-secondary" href="/admin/products/<%= product._id %>/edit">Edit</a>
                    <form class="delete-form" action="/admin/products/<%= product._id %>?_method=DELETE" method="POST">
                        <input class="btn btn-danger" type="submit" value="Delete">
                    </form>
                    <% } %>
                </div>
            </div>
            <br>
            
        </div>
    </div>
</div>