<% include ../partials/header %>
<div class="container">
               <form class="form-inline align-center" action="/search" method="POST">
                
                    <div class="form-group">
                       <input class="form-control" type="text" name="product" placeholder="product name" required>
                    </div>
                    <div class="form-group">
                        <input class="form-control btn btn-primary" type="submit" value="Search">
                    </div>
            
            </form>

            <hr>

    <div class="container card">
    <% products.forEach(function(product){ %>
        <div class="row" style="margin-bottom:5px;">  
            <div class="col-sm-12 card border-light"> 
                <div class="row"> 
                    <div class="col-md-4" id="img-fix-index">
                        <div class="thumbnail">
                          <img class="img-fluid" src="<%= product.image %>">
                         </div>
                    </div>
                    <div class="col-sm-1"></div>
                    <div class="col-sm-7 card-body"> 
                            <h2 class="card-title">
                                <%= product.name %>
                            </h2>
                            <div class="card-text">
                            <p>Price :Rs. <%= product.price %></p>
                            <p><%= product.description.substring(0,100) %>...</p>
                            </div>
                            <a href="/admin/products/<%= product._id%>" class="btn btn-primary">show more</a>
                            
                    </div>
                </div>    
            </div> 
        </div> 
        <hr>
    <% }); %>
    </div>
</div>
<% include ../partials/footer %>