<% include ../partials/header %>
    <div class="container">
       
            <h1 style="text-align:center;">Edit product</h1>
             <div  style="width:50% ; margin:025px auto;">
                <form action="/admin/products/<%= product._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="product[name]" value="<%= product.name %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="product[image]" value="<%= product.image %>">
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" rows="8" placeholder="product description..." name="product[description]" required>
                            <%= product.description %>
                         </textarea>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="product[price]" value="<%= product.price %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="product[category]" value="<%= product.category %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control btn btn-primary" type="submit">
                    </div>
                </form>
                
            <a href="/admin/products">GO BACK!!</a>
           </div> 
    </div>
<% include ../partials/footer %>