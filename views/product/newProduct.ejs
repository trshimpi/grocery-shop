<% include ../partials/header %>
<div class="container">
    <h1 style="text-align:center;">New Product</h1>
    <div  style="width:50% ; margin:025px auto;">
        <form action="/admin/products" method="POST">
            <div class="form-group">
               <input class="form-control" type="text" name="name" placeholder="product name" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="image" placeholder="product image url" required>
            </div>
            <div class="form-group">
                <textarea class="form-control" rows="8" placeholder="product description..." name="description" required>
                </textarea>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="price" placeholder="product price" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="category" placeholder="product category" required>
            </div>
            
            
            <div class="form-group">
                <input class="form-control btn btn-primary" type="submit" value="Add product">
            </div>
            
        </form>
    </div>
</div>



<% include ../partials/footer %>