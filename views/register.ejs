<% include partials/header %>
<div class="container">
    <h1 style="text-align:center;">SIGN UP FORM</h1>
    <div  style="width:50% ; margin:025px auto;">
        <form action="/register" method="POST">
            <div class="form-group">
               <input class="form-control" type="text" name="username" placeholder="username" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="email" name="email" placeholder="email" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="password" name="password" placeholder="password" required>
            </div>
             <div class="form-group">
                <p>Star Membership (You will have to pay monthly charges for star membership)</p>
                <input type="radio" name="starMember" value="true" checked>True or apply<br>
                <input type="radio" name="starMember" value="false"> False or don't apply<br>
            </div>
            
            
            
            <div class="form-group">
                <input class="form-control btn btn-primary" type="submit" value="SIGN UP!!">
            </div>
            
        </form>
        <p>Already an User?<a href="/login">Click here</a> to Log In.</p>
    </div>
</div>



<% include partials/footer %>